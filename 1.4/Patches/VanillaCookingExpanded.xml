<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Cooking Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="VCE_SimpleDessert"]</xpath>
                    <value>
                        <li Class="VarietyMattersMoreCompat.VarietyExtension">
                            <dessertQuality>0</dessertQuality>
                        </li>
                    </value>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="VCE_FineDessert"]</xpath>
                    <value>
                        <li Class="VarietyMattersMoreCompat.VarietyExtension">
                            <dessertQuality>1</dessertQuality>
                        </li>
                    </value>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="VCE_LavishDessert"]</xpath>
                    <value>
                        <li Class="VarietyMattersMoreCompat.VarietyExtension">
                            <dessertQuality>2</dessertQuality>
                        </li>
                    </value>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="VCE_GourmetDessert"]</xpath>
                    <value>
                        <li Class="VarietyMattersMoreCompat.VarietyExtension">
                            <dessertQuality>3</dessertQuality>
                        </li>
                    </value>
                </li>

            </operations>

        </match>
    </Operation>

</Patch>